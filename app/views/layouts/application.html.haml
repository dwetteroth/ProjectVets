!!!
%html
  %head
    %title ProjectVets

    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    %link{:href => "https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css", :rel => "stylesheet"}/
    %link{:href => "//cdn.jsdelivr.net/jquery.slick/1.5.9/slick.css", :rel => "stylesheet", :type => "text/css"}/
    %link{:href => "//cdn.jsdelivr.net/jquery.slick/1.5.9/slick-theme.css", :rel => "stylesheet", :type => "text/css"}/
    = csrf_meta_tags
    %meta{:charset => "utf-8"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %title Project Vets

    %link{:href => "https://dhbhdrzi4tiry.cloudfront.net/cdn/sites/foundation.min.css", :rel => "stylesheet"}
      %link{:href => "https://cdnjs.cloudflare.com/ajax/libs/foundicons/3.0.0/foundation-icons.css", :rel => "stylesheet", :type => "text/css"}
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    :javascript
      var switchTo5x=true;
    %script{:src => "https://w.sharethis.com/button/buttons.js", :type => "text/javascript"}
    :javascript
      stLight.options({publisher: "4542afba-2f4c-453d-ac8a-b8ebe06a564b", doNotHash: false, doNotCopy: false, hashAddressBar: false});
  %body
    -if @homepage.blank?

      :css
        .menu {
          background-color:#fff !important;
          color: #000 !important ;

        }

        body {
           background-color: #b6b67c !important;
        }
        .menu a{
          background-color:transparent !important;
          color: #000 !important ;

        }
        .menuitem a {
          color: #fff !important ;
        }
      =render '/shared/inner_header'
    = yield

    %script{src:"https://dhbhdrzi4tiry.cloudfront.net/cdn/sites/foundation.min.js", type:"text/javascript"}
    %script{:src => "//cdn.jsdelivr.net/jquery.slick/1.5.9/slick.min.js", :type => "text/javascript"}
    :javascript
      $(document).ready(function(){
        $('.donor-slider').slick({
          infinite:true,
          arrows: false

        });
        $('.donor-slider').slick('slickPlay');
        $(document).foundation();

      });
    #destroy

              %input#EmailAddress.rsform-input-box{:name => "form[EmailAddress]", :size => "20", :type => "text", :value => ""}
                .formClr

            %td
          %tr.rsform-block.rsform-block-address
            %td Address
            %td
              %input#Address.rsform-input-box{:name => "form[Address]", :size => "20", :type => "text", :value => ""}
                .formClr

            %td
          %tr.rsform-block.rsform-block-city
            %td City

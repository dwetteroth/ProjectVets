              %input#City.rsform-input-box{:name => "form[City]", :size => "20", :type => "text", :value => ""}
                .formClr

            %td
          %tr.rsform-block.rsform-block-state
            %td State
            %td
              %input#State.rsform-input-box{:name => "form[State]", :size => "20", :type => "text", :value => ""}
                .formClr

            %td
          %tr.rsform-block.rsform-block-zip
            %td Zip
            %td
              %input#Zip.rsform-input-box{:name => "form[Zip]", :size => "20", :type => "text", :value => ""}
                .formClr

            %td
          %tr.rsform-block.rsform-block-phone
            %td Phone
            %td
              %input#Phone.rsform-input-box{:name => "form[Phone]", :size => "20", :type => "text", :value => ""}
                .formClr

            %td
          %tr.rsform-block.rsform-block-information
            %td I would like more information on:
            %td
              %textarea#information.rsform-text-box{:cols => "40", :name => "form[information]", :rows => "5"}
              .formClr

            %td
          %tr.rsform-block.rsform-block-captcha
            %td
            %td
              =recaptcha_tags

            %td
          %tr.rsform-block.rsform-block-signup
            %td
            %td
